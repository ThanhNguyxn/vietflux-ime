{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "VietFlux",
    "version": "0.1.0",
    "identifier": "dev.vietflux.app",
    "build": {
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "VietFlux IME",
                "width": 400,
                "height": 600,
                "resizable": false,
                "visible": true,
                "center": true,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [],
        "externalBin": [],
        "copyright": "",
        "category": "DeveloperTool",
        "shortDescription": "",
        "longDescription": ""
    }
}