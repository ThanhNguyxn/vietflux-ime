{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "VietFlux",
    "version": "1.0.0",
    "identifier": "dev.vietflux.app",
    "build": {
        "frontendDist": "../src",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "",
        "beforeDevCommand": ""
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "VietFlux IME",
                "width": 400,
                "height": 300,
                "resizable": false,
                "visible": false,
                "center": true,
                "decorations": true
            }
        ],
        "trayIcon": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true
        },
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "shortDescription": "Vietnamese Input Method",
        "longDescription": "High-performance Vietnamese Input Method Engine",
        "category": "Utility",
        "windows": {
            "wix": {
                "language": "en-US"
            },
            "nsis": {
                "languages": [
                    "English",
                    "Vietnamese"
                ],
                "displayLanguageSelector": true
            }
        },
        "macOS": {
            "minimumSystemVersion": "10.13"
        },
        "linux": {
            "appimage": {
                "bundleMediaFramework": false
            }
        }
    }
}